FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

applicationClass	pimpleFoam;
startFrom        	latestTime;
endTime			5;
stopAt 			endTime;
deltaT			1;
writeControl    	adjustableRunTime;
writeInterval		0.25;
//writeControl    	timeStep;
//writeInterval		3;
cycleWrite      	0;
writeFormat     	ascii;
writePrecision		6;
writeCompression 	uncompressed;
timeFormat      	general;
timePrecision   	6;
runTimeModifiable	yes;
adjustTimeStep		yes;
maxCo			20;
maxDeltaT		1;

libs
(
    "libOpenFOAM.so"
    "libforces.so"
);

functions
{
    duct
    {
        patches             (duct);
	CofR 		    (0 0 0); //Origin for moment calculations
        outputControl timeStep;outputInterval 5;
        type forces;functionObjectLibs ("libforces.so");pName p;UName U;rhoName rhoInf;rhoInf 1.18;log true;
    }
    rotor
    {
        patches             (baffle baffleother);
        CofR                (0 0 0); //Origin for moment calculations
        outputControl timeStep;outputInterval 5;
        type forces;functionObjectLibs ("libforces.so");pName p;UName U;rhoName rhoInf;rhoInf 1.18;log true;
    }
    total 
    {
        patches             (duct baffle baffleother);
        CofR                (0 0 0); //Origin for moment calculations
        outputControl timeStep;outputInterval 5;
        type forces;functionObjectLibs ("libforces.so");pName p;UName U;rhoName rhoInf;rhoInf 1.18;log true;
    }
}
